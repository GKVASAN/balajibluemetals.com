    <!-- Hero Section -->
    <section class="bg-gray-900 text-white py-20 px-4">
        <div class="container mx-auto">
            <h1 class="text-4xl font-bold mb-4">Welcome to Balaji Blue Metals</h1>
            <p class="text-lg mb-8">Balaji Blue Metals is a trusted supplier in the construction industry offering high quality construction materials such as M Sand, P Sand, jelly, and chips with 100 Ton weigh Bridge to construction companies and Builders. We have been providing a huge selection of top material at affordable prices enabling customers to stay within budget and deadline. Our Individualized services and expertise enable you to get the job done faster and easier.</p>
            <a href="#services" class="bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600">Our Services</a>
        </div>
    </section>

    <!-- Services Section -->
    <section id="services" class="py-20">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold mb-8 text-center">Our Services</h2>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
                <!-- Service 1 -->
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-bold mb-4">M Sand</h3>
                    <p>High-quality Manufactured Sand for construction purposes.</p>
                </div>
                <!-- Service 2 -->
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-bold mb-4">P Sand</h3>
                    <p>P Sand suitable for various construction applications.</p>
                </div>
                <!-- Service 3 -->
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-bold mb-4">Jelly 20 MM & 40 MM</h3>
                    <p>Jelly of 20 mm and 40 mm sizes for concrete mixing.</p>
                </div>
                <!-- Service 4 -->
                <div class="bg-white p-6 rounded-lg shadow-md">
                    <h3 class="text-xl font-bold mb-4">Chips</h3>
                    <p>Construction Chips available in various sizes.</p>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="bg-gray-900 text-white py-20">
        <div class="container mx-auto">
            <h2 class="text-3xl font-bold mb-8 text-center">Contact Us</h2>
            <p class="text-lg mb-8 text-center">Have any questions or inquiries? Get in touch with us!</p>
            <form id="contactForm" class="max-w-md mx-auto">
                <div class="mb-4">
                    <label for="name" class="block text-lg font-medium mb-2">Name</label>
                    <input type="text" id="name" name="name" class="w-full px-4 py-2 rounded-lg" placeholder="Enter your name" required>
                </div>
                <div class="mb-4">
                    <label for="email" class="block text-lg font-medium mb-2">Email</label>
                    <input type="email" id="email" name="email" class="w-full px-4 py-2 rounded-lg" placeholder="Enter your email" required>
                </div>
                <div class="mb-4">
                    <label for="message" class="block text-lg font-medium mb-2">Message</label>
                    <textarea id="message" name="message" class="w-full px-4 py-2 rounded-lg" rows="5" placeholder="Enter your message" required></textarea>
                </div>
                <button type="submit" class="bg-blue-500 text-white py-2 px-6 rounded-lg hover:bg-blue-600">Send Message</button>
            </form>
        </div>
    </section>

    <!-- Footer Section -->
    <footer class="bg-gray-800 text-white py-8">
        <div class="container mx-auto text-center">
            <p>Company Name: Balaji Blue Metals</p>
            <p>Email: <a href="mailto:dgrajurk66@gmail.com">dgrajurk66@gmail.com</a> / <a href="mailto:vasan.hrm@gmail.com">vasan.hrm@gmail.com</a></p>
            <p>Contact No: 9080810165</p>
            <p>Address: No.77/2-A, Redhills, Main Road, Thamarai Pakkam, Opp- Megana Arts College, Tiruvallur - 601103</p>
        </div>
    </footer>

